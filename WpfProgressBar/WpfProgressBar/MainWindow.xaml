<Window x:Class="WpfProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProgressBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="206" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock FontSize="12" Foreground="Navy" Name="TextBlock1" Grid.Row="0" Grid.Column="0" Margin="4,4,4,4" TextWrapping="WrapWithOverflow"  >This is a demonstration of how to use a WPF ProgressBar in a "tight code loop".</TextBlock>
        <ProgressBar Grid.Row="1" Height="20" Width="200" Margin="0,4,0,0"   Name="ProgressBar1" HorizontalAlignment="Center"  VerticalAlignment="top"  />
        <Button Grid.Row="2" Height="23" Width="100" Name="Button1" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button1_Click">Start</Button>

    </Grid>
</Window>
